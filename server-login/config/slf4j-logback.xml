<?xml version="1.0" encoding="UTF-8"?>
<configuration  scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>logback</contextName>
    <property name="log.path" value="./logs/" />
    <property name="log.appName" value="loginServer" />

    <jmxConfigurator/>
    <property name="CONSOLE_LOG_PATTERN" value="%yellow(%date{yyyy-MM-dd HH:mm:ss}) |%highlight(%-5level) |%blue(%thread) |%blue(%file:%line) |%green(%logger) |%cyan(%msg%n)"/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!--只显示quartz警告及以上日志-->
    <logger name="org.quartz" level="WARN" additivity="false"/>
    <!--只显示hikari通知及以上日志-->
    <logger name="com.zaxxer.hikari" level="INFO" additivity="false"/>
    <!--根节点-->
    <root level="DEBUG">
        <appender-ref ref="console"/>
    </root>

</configuration>