<?xml version="1.0" encoding="UTF-8"?>
<configuration  scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>logback</contextName>
    <property name="log.path" value="./logs/" />
    <property name="log.appName" value="loginServer" />

    <!-- 彩色日志格式 -->
    <property name="CONSOLE_LOG_PATTERN" value="%highlight(%date{yyyy-MM-dd HH:mm:ss.SSS}) %boldYellow([%thread]) %highlight([%-5level])  %boldCyan([%replace(%caller{1}){'\t|Caller.{1}0|\r\n', ''}]) %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!--只显示quartz警告及以上日志-->
    <logger name="org.quartz" level="WARN" additivity="false"/>
    <!--只显示hikari通知及以上日志-->
    <logger name="com.zaxxer.hikari" level="INFO" additivity="false"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>